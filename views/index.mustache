<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Create User Directory</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="styles.css" rel="stylesheet">
  </head>
  <body>
      <h1>Create User Directory</h1>
      <div id="wrapper">
        {{#userBox}}
          {{#users}}
            <div class="user">
            <img src={{avatar}}>
            <p class="name">{{name}}</p>
            {{#job}}
              <p class="job">{{job}}</p>
            {{/job}}
            {{^job}}
              <p class="forhire">Available for hire<p>
            {{/job}}
          </div>
          {{/users}}
        {{/userBox}}
      </div>

      <div id="wrapper2">
        {{#userBox}}
          {{#users}}
            <div class="user2">
            <img class="round" src={{avatar}}>
            <p class="name">{{name}}</p>
            <p>{{#address}}
                {{city}}, {{country}}
                {{/address}}
            </p>
            {{#job}}
              <p class="job">{{job}}</p>
            {{/job}}
            {{^job}}
              <p class="forhire">Available for hire<p>
            {{/job}}
          </div>
          {{/users}}
        {{/userBox}}
      </div>

  </body>
</html>